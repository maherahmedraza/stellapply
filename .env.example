# =============================================================
# Stellapply — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit the .env file!
# =============================================================

# ---- Core ----
APP_NAME=Stellapply
ENVIRONMENT=development    # development | staging | production
DEBUG=true

# ---- Database (prefix: DB_) ----
DB_URL=postgresql+asyncpg://stellapply:password@localhost:5432/stellapply
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ---- Redis (prefix: REDIS_) ----
REDIS_URL=redis://localhost:6379/0
REDIS_USE_SSL=false
REDIS_TIMEOUT=5

# ---- Security (prefix: SECURITY_) ----
# REQUIRED — generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
SECURITY_SECRET_KEY=your-secret-key-min-32-chars-change-me-now
SECURITY_ENCRYPTION_KEY=your-encryption-key-min-32-chars-change-me
SECURITY_ALGORITHM=RS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---- AI (prefix: AI_) ----
AI_GEMINI_API_KEY=
AI_GEMINI_MODEL=gemini-3.0-flash
AI_EMBEDDING_MODEL=text-embedding-004
AI_RATE_LIMIT_RPM=60

# ---- Storage / MinIO (prefix: STORAGE_) ----
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=stellapply
STORAGE_SECRET_KEY=password
STORAGE_SECURE=false
STORAGE_BUCKET_RESUMES=resumes
STORAGE_BUCKET_ASSETS=assets

# ---- Keycloak (prefix: KC_) ----
KC_URL=http://localhost:8081
KC_REALM=stellapply
KC_CLIENT_ID=stellapply-backend
KC_CLIENT_SECRET=
KC_ADMIN_USER=admin
KC_ADMIN_PASSWORD=admin

# ---- Feature Flags (prefix: FEATURE_) ----
FEATURE_ENABLE_AI_MATCHING=true
FEATURE_ENABLE_RESUME_PARSING=true
FEATURE_ENABLE_BETA_UI=false

# ---- CORS ----
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ---- Frontend (Next.js) ----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8081
NEXT_PUBLIC_KEYCLOAK_REALM=stellapply
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=stellapply-frontend
